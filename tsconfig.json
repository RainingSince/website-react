{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "allowJs": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "suppressImplicitAnyIndexErrors": true,
    "strict": true,
    "noImplicitReturns": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true
  }
}
